{
  "name": "payloadkit-monorepo",
  "version": "0.0.1",
  "private": true,
  "description": "PayloadKit - Open source framework for PayloadCMS",
  "repository": {
    "type": "git",
    "url": "https://github.com/j-corral/payloadkit.git"
  },
  "workspaces": [
    "packages/*",
    "apps/*",
    "plugins/*",
    "templates/*"
  ],
  "scripts": {
    "build": "bun run --filter='./packages/*' build",
    "dev": "bun run --filter='./packages/*' --parallel dev",
    "test": "bun run --filter='./packages/*' test",
    "lint": "bun run --filter='./packages/*' lint",
    "clean": "bun run --filter='./packages/*' clean",
    "typecheck": "bun run --filter='./packages/*' typecheck",
    "dev:docs": "bun run --filter=docs dev",
    "build:docs": "bun run --filter=docs build",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "bun run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@types/node": "^22.5.4",
    "eslint": "^9.33.0",
    "eslint-config-next": "^15.4.4",
    "prettier": "^3.6.2",
    "tsup": "^8.0.1",
    "typescript": "^5.7.3",
    "vitest": "^3.2.3"
  },
  "engines": {
    "node": ">=18.20.2",
    "bun": ">=1.0.0"
  },
  "packageManager": "bun@1.1.38"
}