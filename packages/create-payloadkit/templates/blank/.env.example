# ======================================
# PAYLOADKIT BLANK TEMPLATE - ENVIRONMENT VARIABLES
# ======================================

# =====================================
# REQUIRED CONFIGURATION
# =====================================

# PayloadCMS Secret Key (REQUIRED)
# Generate a random 32+ character string
PAYLOAD_SECRET=your-super-secret-payload-key-change-this-immediately

# Database Connection (REQUIRED)
# PostgreSQL connection string
DATABASE_URI=postgresql://username:password@localhost:5432/your_database_name

# Better Auth Configuration (REQUIRED)
# Base URL for your application
BETTER_AUTH_URL=http://localhost:3000

# =====================================
# SECURITY CONFIGURATION (RECOMMENDED)
# =====================================

# Two-Factor Authentication
TWOFA_ISSUER="PayloadKit App"

# Development Security Override (⚠️ DEVELOPMENT ONLY)
# Set to 'true' to skip 2FA enforcement during development
# NEVER set this to 'true' in production!
# SKIP_2FA_ENFORCEMENT=false

# Trusted Origins (comma-separated)
TRUSTED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Rate Limiting Configuration
ENABLE_RATE_LIMITING=true
GENERAL_RATE_LIMIT=100          # Requests per 15 minutes per IP
AUTH_RATE_LIMIT=5               # Auth attempts per 15 minutes per IP
PASSWORD_RESET_RATE_LIMIT=3     # Password resets per hour per IP
TWOFA_RATE_LIMIT=10            # 2FA attempts per 15 minutes per IP
UPLOAD_RATE_LIMIT=20           # File uploads per hour per IP

# Skip rate limiting in development (⚠️ DEVELOPMENT ONLY)
# SKIP_RATE_LIMITING=false

# Audit Logging
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_LEVEL=info
AUDIT_LOG_RETENTION=true
AUDIT_LOG_RETENTION_DAYS=365

# IP Access Control (optional)
# Comma-separated list of IPs
# IP_WHITELIST=192.168.1.100,10.0.0.1
# IP_BLACKLIST=192.168.1.200

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# =====================================
# OPTIONAL AUTHENTICATION FEATURES
# =====================================

# Magic Links (passwordless authentication)
ENABLE_MAGIC_LINKS=false

# WebAuthn/Passkeys
ENABLE_WEBAUTHN=false
WEBAUTHN_RP_NAME="PayloadKit App"
WEBAUTHN_RP_ID=localhost

# =====================================
# OAUTH PROVIDERS (OPTIONAL)
# =====================================
# Add credentials to automatically enable OAuth providers

# Google OAuth
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth  
# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret

# Discord OAuth
# DISCORD_CLIENT_ID=your-discord-client-id
# DISCORD_CLIENT_SECRET=your-discord-client-secret

# =====================================
# APPLICATION CONFIGURATION
# =====================================

# Environment
NODE_ENV=development

# Application Version (for audit logs)
APP_VERSION=1.0.0

# Next.js Configuration
NEXT_PUBLIC_PAYLOAD_URL=http://localhost:3000

# =====================================
# EMAIL CONFIGURATION (for Magic Links)
# =====================================
# Required if ENABLE_MAGIC_LINKS=true

# SMTP Configuration
# EMAIL_SMTP_HOST=smtp.gmail.com
# EMAIL_SMTP_PORT=587
# EMAIL_SMTP_USER=your-email@gmail.com
# EMAIL_SMTP_PASSWORD=your-app-password
# EMAIL_FROM=noreply@yourdomain.com

# Or use email service providers like SendGrid, Mailgun, etc.
# SENDGRID_API_KEY=your-sendgrid-api-key
# MAILGUN_API_KEY=your-mailgun-api-key

# =====================================
# PRODUCTION ONLY VARIABLES
# =====================================
# These should only be set in production

# Force HTTPS redirect
# FORCE_HTTPS=true

# Session Security (production)
# SESSION_SECURE=true
# SESSION_SAME_SITE=strict

# Security Headers (production)
# CSP_REPORT_URI=https://yourdomain.com/csp-report
# HSTS_MAX_AGE=31536000

# =====================================
# MONITORING & LOGGING (OPTIONAL)
# =====================================

# External audit log endpoint
# AUDIT_LOG_ENDPOINT=https://your-logging-service.com/webhook

# Sentry for error tracking
# SENTRY_DSN=https://your-sentry-dsn

# Application monitoring
# NEWRELIC_LICENSE_KEY=your-newrelic-key

# =====================================
# DEVELOPMENT HELPERS
# =====================================

# Payload Admin Panel Configuration
PAYLOAD_PUBLIC_ADMIN_ONLY=false

# Database Logging (development)
# DATABASE_LOGGING=true

# Detailed Auth Logs (development)  
# BETTER_AUTH_DEBUG=true