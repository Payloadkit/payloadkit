{
  "name": "blank",
  "version": "0.1.0",
  "description": "PayloadKit blank template - secure-by-default foundation with enterprise-grade authentication and security",
  "extends": null,
  "payloadkitVersion": "0.1.0",
  "payloadVersion": "^3.0.0",
  "nextVersion": "^15.0.0",
  "collections": [
    "Users",
    "Media", 
    "Pages"
  ],
  "globals": [],
  "blocks": [],
  "components": [
    "RichText",
    "CMSLink",
    "TwoFactorSetup",
    "SecurityDashboard"
  ],
  "registryDependencies": {
    "collections/Users": "0.0.1",
    "collections/Media": "0.0.1",
    "collections/Pages": "0.0.1",
    "components/RichText": "0.0.1",
    "components/CMSLink": "0.0.1"
  },
  "features": [
    "PostgreSQL database adapter",
    "Lexical rich text editor",
    "Tailwind CSS with shadcn/ui",
    "TypeScript configuration",
    "Next.js App Router",
    "Basic SEO fields",
    "Media upload with responsive sizes",
    "üõ°Ô∏è Two-Factor Authentication (2FA) - Required by default",
    "üìä Audit Logging - Complete activity tracking",
    "üö´ Rate Limiting - Brute force protection",
    "üîí Security Headers - CSP, HSTS, X-Frame-Options",
    "üåê OAuth/Social Login - Google, GitHub, Discord, Microsoft, Apple, Twitter, LinkedIn",
    "‚ú® Magic Links - Passwordless authentication",
    "üîë WebAuthn/Passkeys - Biometric authentication",
    "üè¢ Enterprise Security - GDPR, SOX, HIPAA compliant"
  ],
  "security": {
    "twoFactorAuthentication": {
      "enabled": true,
      "required": true,
      "providers": ["TOTP", "Backup Codes"]
    },
    "auditLogging": {
      "enabled": true,
      "tracks": ["authentication", "data-changes", "admin-actions"]
    },
    "rateLimiting": {
      "enabled": true,
      "endpoints": ["auth", "password-reset", "2fa", "uploads"]
    },
    "securityHeaders": {
      "enabled": true,
      "includes": ["CSP", "HSTS", "X-Frame-Options", "CSRF"]
    }
  },
  "authentication": {
    "methods": {
      "emailPassword": {
        "enabled": true,
        "requirements": {
          "minLength": 12,
          "requireUppercase": true,
          "requireNumbers": true,
          "requireSymbols": true,
          "emailVerification": true
        }
      },
      "oauth": {
        "supported": ["Google", "GitHub", "Discord", "Microsoft", "Apple", "Twitter", "LinkedIn"],
        "autoEnabled": "when credentials provided"
      },
      "magicLinks": {
        "supported": true,
        "enabledBy": "ENABLE_MAGIC_LINKS=true"
      },
      "webauthn": {
        "supported": true,
        "enabledBy": "ENABLE_WEBAUTHN=true",
        "includes": ["TouchID", "FaceID", "WindowsHello", "SecurityKeys"]
      }
    }
  },
  "requiredEnvVars": [
    "PAYLOAD_SECRET",
    "DATABASE_URI", 
    "BETTER_AUTH_URL"
  ],
  "recommendedEnvVars": [
    "TWOFA_ISSUER",
    "TRUSTED_ORIGINS"
  ],
  "developmentOverrides": {
    "warning": "‚ö†Ô∏è Development only - NEVER use in production",
    "variables": ["SKIP_2FA_ENFORCEMENT", "SKIP_RATE_LIMITING"]
  },
  "compliance": ["GDPR", "SOX", "HIPAA", "ISO27001"],
  "monitoring": {
    "auditLogs": "Built-in audit logging system",
    "securityMetrics": "Failed logins, 2FA adoption, OAuth usage",
    "externalIntegration": ["Sentry", "NewRelic", "Custom webhooks"]
  },
  "addedFiles": [
    "src/payload.config.ts",
    "src/collections/Users/",
    "src/collections/Media/",
    "src/collections/Pages/",
    "src/components/RichText/",
    "src/components/CMSLink/",
    "src/components/auth/TwoFactorSetup.tsx",
    "src/components/auth/SecurityDashboard.tsx",
    "src/components/ui/input.tsx",
    "src/components/ui/label.tsx",
    "src/components/ui/alert.tsx",
    "src/auth/config.ts",
    "src/auth/providers.ts",
    "src/auth/advanced.ts",
    "src/security/audit.ts",
    "src/security/middleware.ts",
    "src/security/rate-limit.ts",
    "src/app/",
    "src/lib/utils.ts",
    "middleware.ts",
    "components.json",
    "tailwind.config.js",
    "next.config.js",
    "tsconfig.json",
    ".env.example",
    "SECURITY.md",
    "README.md",
    ".gitignore"
  ]
}